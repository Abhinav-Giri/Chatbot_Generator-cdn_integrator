{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "frontend/package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/chat", "dest": "/public/widget.html" },
    { "src": "/embed.js", "dest": "/public/embed.js" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ]
}
